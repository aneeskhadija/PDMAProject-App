<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.DailyFlood_Report">

    <androidx.cardview.widget.CardView
        android:id="@+id/id_table_cardview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        app:cardCornerRadius="10dp"
        android:layout_margin="7dp"
        android:padding="7dp"
        android:background="@color/colorWhite">

        <TableLayout
            android:id="@+id/time_lag_table"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="7dp">
            <TableRow
                android:id="@+id/first_row"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="S. NO"
                    android:paddingStart="3dp"
                    android:paddingEnd="3dp"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="@color/colorBlack"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/location"
                    android:paddingStart="3dp"
                    android:paddingEnd="3dp"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="@color/colorBlack"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=" Distance \n    in KM"
                    android:paddingStart="3dp"
                    android:paddingEnd="3dp"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="@color/colorBlack"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Time Lag"
                    android:paddingStart="3dp"
                    android:paddingEnd="3dp"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="@color/colorBlack"/>
            </TableRow>
            <TableRow
                android:id="@+id/second_row"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:paddingStart="3dp"
                    android:paddingEnd="3dp"
                    android:gravity="center"
                    android:textSize="12sp"
                    android:textColor="@color/colorBlack"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Khawaza Khela to Amandara"
                    android:paddingStart="3dp"
                    android:paddingEnd="3dp"
                    android:textSize="12sp"
                    android:textColor="@color/colorBlack"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="65"
                    android:paddingStart="3dp"
                    android:paddingEnd="3dp"
                    android:gravity="center"
                    android:textSize="12sp"
                    android:textColor="@color/colorBlack"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="12 Hours"
                    android:paddingStart="3dp"
                    android:paddingEnd="3dp"
                    android:textSize="12sp"
                    android:textColor="@color/colorBlack"/>
            </TableRow>
            <TableRow
                android:id="@+id/third_row"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="2"
                    android:paddingStart="3dp"
                    android:paddingEnd="3dp"
                    android:gravity="center"
                    android:textSize="12sp"
                    android:textColor="@color/colorBlack"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Amandara to Munda"
                    android:paddingStart="3dp"
                    android:paddingEnd="3dp"
                    android:textSize="12sp"
                    android:textColor="@color/colorBlack"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="55"
                    android:paddingStart="3dp"
                    android:paddingEnd="3dp"
                    android:gravity="center"
                    android:textSize="12sp"
                    android:textColor="@color/colorBlack"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="9 Hours"
                    android:paddingStart="3dp"
                    android:paddingEnd="3dp"
                    android:textSize="12sp"
                    android:textColor="@color/colorBlack"/>
            </TableRow>
            <TableRow
                android:id="@+id/fourth_row"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="3"
                    android:paddingStart="3dp"
                    android:paddingEnd="3dp"
                    android:gravity="center"
                    android:textSize="12sp"
                    android:textColor="@color/colorBlack"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Munda to Charsadda Road"
                    android:paddingStart="3dp"
                    android:paddingEnd="3dp"
                    android:textSize="12sp"
                    android:textColor="@color/colorBlack"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="40"
                    android:paddingStart="3dp"
                    android:paddingEnd="3dp"
                    android:gravity="center"
                    android:textSize="12sp"
                    android:textColor="@color/colorBlack"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="6.5 Hours"
                    android:paddingStart="3dp"
                    android:paddingEnd="3dp"
                    android:textSize="12sp"
                    android:textColor="@color/colorBlack"/>
            </TableRow>
            <TableRow
                android:id="@+id/fifth_row"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="4"
                    android:paddingStart="3dp"
                    android:paddingEnd="3dp"
                    android:gravity="center"
                    android:textSize="12sp"
                    android:textColor="@color/colorBlack"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Charsadda to Nowshera"
                    android:paddingStart="3dp"
                    android:paddingEnd="3dp"
                    android:textSize="12sp"
                    android:textColor="@color/colorBlack"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="35"
                    android:paddingStart="3dp"
                    android:paddingEnd="3dp"
                    android:gravity="center"
                    android:textSize="12sp"
                    android:textColor="@color/colorBlack"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="6 Hours"
                    android:paddingStart="3dp"
                    android:paddingEnd="3dp"
                    android:textSize="12sp"
                    android:textColor="@color/colorBlack"/>
            </TableRow>
            <TableRow
                android:id="@+id/sixth_row"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="5"
                    android:paddingStart="3dp"
                    android:paddingEnd="3dp"
                    android:gravity="center"
                    android:textSize="12sp"
                    android:textColor="@color/colorBlack"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Warsak to Nowshera"
                    android:paddingStart="3dp"
                    android:paddingEnd="3dp"
                    android:textSize="12sp"
                    android:textColor="@color/colorBlack"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="60"
                    android:paddingStart="3dp"
                    android:paddingEnd="3dp"
                    android:gravity="center"
                    android:textSize="12sp"
                    android:textColor="@color/colorBlack"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="10 Hours"
                    android:paddingStart="3dp"
                    android:paddingEnd="3dp"
                    android:textSize="12sp"
                    android:textColor="@color/colorBlack"/>
            </TableRow>
        </TableLayout>

    </androidx.cardview.widget.CardView>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/id_flood_report_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/id_table_cardview"
        android:paddingLeft="10dp"
        android:paddingStart="10dp"
        android:paddingRight="10dp"
        android:paddingEnd="10dp"/>


</RelativeLayout>