<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.Report_DateSelection">

    <TextView
        android:id="@+id/main_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Report Duration"
        android:layout_below="@+id/toolbar"
        android:textColor="@color/colorBlack"
        android:textStyle="bold"
        android:textSize="14sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"/>

    <LinearLayout
        android:id="@+id/layout_one"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/main_tv"
        android:orientation="horizontal"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="5dp"
        android:layout_centerHorizontal="true">

        <TextView
            android:id="@+id/tv_start_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="normal"
            android:textSize="12sp"
            android:text="Start Date"/>
        <ImageView
            android:id="@+id/start_date_dropdown"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginStart="10dp"
            app:srcCompat="@drawable/ic_arrow_drop_down_circle_black_24dp"/>

    </LinearLayout>

    <DatePicker
        android:id="@+id/start_date_picker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:datePickerMode="spinner"
        android:calendarViewShown="false"
        android:layout_alignParentEnd="true"
        android:visibility="gone"
        android:layout_below="@+id/layout_one"/>

    <LinearLayout
        android:id="@+id/layout_two"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="30dp"
        android:layout_below="@id/start_date_picker"
        android:layout_centerHorizontal="true"
        android:layout_marginEnd="5dp">

        <TextView
            android:id="@+id/tv_end_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="normal"
            android:textSize="12sp"
            android:text="End Date"/>

        <ImageView
            android:id="@+id/end_date_dropdown"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginStart="18dp"
            app:srcCompat="@drawable/ic_arrow_drop_down_circle_black_24dp"/>

    </LinearLayout>

    <DatePicker
        android:id="@+id/end_date_picker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:datePickerMode="spinner"
        android:calendarViewShown="false"
        android:layout_alignParentEnd="true"
        android:visibility="gone"
        android:layout_below="@id/layout_two"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/end_date_picker"
        android:gravity="center">

        <Button
            android:id="@+id/button_done"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:text="Next"
            android:background="@drawable/shapebutton"
            android:textAllCaps="false"
            android:layout_marginTop="20dp"
            android:layout_alignParentEnd="true" />

    </LinearLayout>

</RelativeLayout>