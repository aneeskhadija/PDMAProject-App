            android:text="Pulses"
            android:textSize="14sp"
            android:paddingLeft="5dp"
            android:layout_marginRight="16dp"
            android:paddingBottom="5dp"/>

        <TextView
            android:id="@+id/pulses_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:paddingLeft="5dp"
            android:layout_marginRight="16dp"
            android:paddingBottom="5dp"/>
    </LinearLayout>

    <TextView
        android:id="@+id/text_view_non_food"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linear_six"
        android:paddingTop="3dp"
        android:text="Non Food Items"
        android:textColor="@color/blue700"
        android:textSize="14sp"
        android:layout_marginLeft="7dp" />

    <LinearLayout
        android:id="@+id/linear_seven"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/text_view_non_food"
        android:paddingTop="7dp">

        <TextView
