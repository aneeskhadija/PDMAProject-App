<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp">

    <LinearLayout
        android:id="@+id/linear_one"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">
        <TextView
            android:id="@+id/text_disaster"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="marquee"
            android:singleLine="true"
            android:text="Relief For Disaster: "
            android:textSize="12sp"
            android:paddingLeft="5dp"
            android:textColor="@color/bg_screen1"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="7dp"
            android:layout_marginRight="16dp"/>

        <TextView
            android:id="@+id/relief_activity_disaster_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="marquee"
            android:singleLine="true"
            android:textSize="12sp"
            android:paddingLeft="5dp"
            android:textColor="@color/colorBlack"
            android:layout_alignParentRight="true"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_two"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linear_one"
        android:orientation="horizontal"
        android:paddingTop="10dp">
        <ImageView
            android:id="@+id/location_icon"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/ic_location_on_black_24dp"/>

        <TextView
            android:id="@+id/relief_activity_location_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignWithParentIfMissing="true"
            android:text="Location"
            android:textSize="14sp"
            android:paddingLeft="5dp"
            android:layout_marginRight="16dp"
            android:paddingBottom="5dp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_three"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/linear_two"
        android:paddingTop="10dp">
        <ImageView
            android:id="@+id/date_time_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_access_time_black_24dp"/>

        <TextView
            android:id="@+id/relief_activity_date_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignWithParentIfMissing="true"
            android:text="Date and Time"
            android:textSize="14sp"
            android:paddingLeft="5dp"
            android:layout_marginRight="16dp"
            android:paddingBottom="5dp"/>
    </LinearLayout>

    <TextView
        android:id="@+id/text_view_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Food Items"
        android:paddingTop="3dp"
        android:textColor="@color/blue700"
        android:layout_below="@+id/linear_three"
        android:textSize="14sp"
        android:layout_marginLeft="7dp" />

    <LinearLayout
        android:id="@+id/linear_four"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/text_view_content"
        android:paddingTop="7dp">

        <TextView
            android:id="@+id/text_food_packages"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Food Packages"
            android:textSize="14sp"
            android:paddingLeft="5dp"
            android:layout_marginRight="16dp"
            android:paddingBottom="5dp"/>

        <TextView
            android:id="@+id/food_packages_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:paddingLeft="5dp"
            android:layout_marginRight="16dp"
            android:paddingBottom="5dp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_five"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/linear_four"
        android:paddingTop="7dp">

        <TextView
            android:id="@+id/text_wheat_flours"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Wheat Flours"
            android:textSize="14sp"
            android:paddingLeft="5dp"
            android:layout_marginRight="16dp"
            android:paddingBottom="5dp"/>

        <TextView
            android:id="@+id/wheat_flours_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:paddingLeft="5dp"
            android:layout_marginRight="16dp"
            android:paddingBottom="5dp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_six"
