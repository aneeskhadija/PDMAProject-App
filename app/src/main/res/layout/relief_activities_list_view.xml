            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:paddingLeft="5dp"
            android:layout_marginRight="16dp"
            android:paddingBottom="5dp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_sixteen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/linear_fifteen"
        android:paddingTop="7dp">

        <TextView
            android:id="@+id/text_pillows"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pillows"
            android:textSize="14sp"
            android:paddingLeft="5dp"
            android:layout_marginRight="16dp"
            android:paddingBottom="5dp"/>

        <TextView
            android:id="@+id/pillows_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:paddingLeft="5dp"
            android:layout_marginRight="16dp"
            android:paddingBottom="5dp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_seventeen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/linear_sixteen"
        android:paddingTop="7dp">

        <TextView
            android:id="@+id/text_quilts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Quilts"
            android:textSize="14sp"
            android:paddingLeft="5dp"
            android:layout_marginRight="16dp"
            android:paddingBottom="5dp"/>

        <TextView
            android:id="@+id/quilts_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:paddingLeft="5dp"
            android:layout_marginRight="16dp"
