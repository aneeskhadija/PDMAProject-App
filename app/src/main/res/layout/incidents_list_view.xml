<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_alignParentTop="true"
    android:layout_centerHorizontal="true"
    app:cardCornerRadius="10dp"
    android:layout_margin="7dp"
    android:background="@color/colorWhite">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="10dp"
        android:paddingBottom="5dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <LinearLayout
            android:id="@+id/linear_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true">

            <TextView
                android:id="@+id/text_disaster_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="marquee"
                android:singleLine="true"
                android:text="Incident: "
                android:textSize="12sp"
                android:paddingLeft="5dp"
                android:textColor="@color/bg_screen1"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="7dp"
                android:layout_marginRight="16dp"/>

            <TextView
                android:id="@+id/incident_disaster_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="marquee"
                android:singleLine="true"
                android:text="Warning"
                android:textSize="12sp"
                android:paddingLeft="5dp"
                android:textColor="@color/colorBlack"
                android:layout_alignParentRight="true"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear_two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linear_one"
            android:orientation="horizontal"
            android:paddingTop="10dp">

            <ImageView
                android:id="@+id/location_icon"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/ic_location_on_black_24dp"/>

            <TextView
                android:id="@+id/incident_location_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignWithParentIfMissing="true"
                android:text="Location"
                android:textSize="14sp"
                android:paddingLeft="5dp"
                android:layout_marginRight="16dp"
                android:paddingBottom="5dp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear_three"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/linear_two"
            android:paddingTop="10dp">

            <ImageView
                android:id="@+id/date_time_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_access_time_black_24dp"/>

            <TextView
                android:id="@+id/incident_date_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignWithParentIfMissing="true"
                android:text="Date and Time"
                android:textSize="14sp"
                android:paddingLeft="5dp"
                android:layout_marginRight="16dp"
                android:paddingBottom="5dp" />

            <TextView
                android:id="@+id/incident_time_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="5dp"
                android:paddingEnd="5dp"
                android:textColor="@color/colorBlack"
                android:textSize="14sp"/>
        </LinearLayout>

        <TextView
            android:id="@+id/text_view_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Content"
            android:textColor="@color/blue700"
            android:textSize="14sp"
            android:layout_marginLeft="7dp" />

        <LinearLayout
            android:id="@+id/linear_five"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/text_view_content"
            android:paddingTop="7dp">

            <TextView
                android:id="@+id/text_loses"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignWithParentIfMissing="true"
                android:text="Loses: "
                android:textSize="14sp"
                android:paddingLeft="5dp"
                android:layout_marginRight="16dp"
                android:paddingBottom="5dp"/>

            <TextView
                android:id="@+id/incident_loses_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="5dp"
                android:paddingEnd="5dp"
                android:textSize="14sp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear_six"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/linear_five"
            android:paddingTop="7dp">
            <TextView
                android:id="@+id/text_injuries"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignWithParentIfMissing="true"
                android:text="Injuries: "
                android:textSize="14sp"
                android:paddingLeft="5dp"
                android:layout_marginRight="16dp"
                android:paddingBottom="5dp"/>

            <TextView
                android:id="@+id/incident_injuries_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="5dp"
                android:paddingEnd="5dp"
                android:textSize="14sp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear_seven"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/linear_six"
            android:paddingTop="3dp">

            <TextView
                android:id="@+id/text_houses_damaged"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignWithParentIfMissing="true"
                android:text="Houses Damage: "
                android:textSize="14sp"
                android:paddingLeft="5dp"
                android:layout_marginRight="16dp"
                android:paddingBottom="5dp"/>

            <TextView
                android:id="@+id/incident_houses_damaged_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="5dp"
                android:paddingEnd="5dp"
                android:textSize="14sp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear_eight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/linear_seven"
            android:paddingTop="3dp">

            <TextView
                android:id="@+id/text_affected_road"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Affected Road: "
                android:textColor="@color/blue700"
                android:textSize="14sp"
                android:layout_marginLeft="7dp"/>

            <TextView
                android:id="@+id/incident_affected_road_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="5dp"
                android:paddingEnd="5dp"
                android:textSize="14sp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear_nine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/linear_eight"
            android:paddingTop="3dp">

            <TextView
                android:id="@+id/text_alternate_road"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Alternate Road: "
                android:textColor="@color/blue700"
                android:textSize="14sp"
                android:layout_marginLeft="7dp"/>

            <TextView
                android:id="@+id/incident_alternate_road_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="5dp"
                android:paddingEnd="5dp"
                android:textSize="14sp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear_ten"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@+id/linear_nine"
            android:paddingTop="3dp">
            <TextView
                android:id="@+id/text_information"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/more_information"
                android:textColor="@color/colorBlack"
                android:layout_marginLeft="7dp"
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/incident_information_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="7dp"
                android:textSize="14sp"
                android:paddingBottom="5dp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear_eleven"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@+id/linear_ten"
            android:paddingTop="3dp">
            <TextView
                android:id="@+id/text_issued"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Report Issued"
                android:textColor="@color/BlueGrey"
                android:layout_marginLeft="7dp"
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/report_issued_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="7dp"
                android:textSize="14sp"
                android:paddingBottom="5dp"/>
        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>

